{
  "name": "@react-hookz/eslint-config",
  "version": "0.0.0",
  "description": "eslint configuration files used in @react-hookz projects",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-hookz/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/react-hookz/eslint-config/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./base.js",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-mdx": "^1.16.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "prettier": "^2.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/cz-commitlint": "^16.0.0",
    "@jamesacarr/eslint-formatter-github-actions": "^0.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "commitizen": "^4.2.4",
    "commitlint": "^16.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "semantic-release": "^18.0.1",
    "yarn": "^1.22.17"
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "lint": "eslint . --ext .js",
    "lint:fix": "yarn lint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.js": "yarn lint:fix"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
