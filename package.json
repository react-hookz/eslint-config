{
  "name": "@react-hookz/eslint-config",
  "version": "1.8.0",
  "description": "eslint configuration files used in @react-hookz projects",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-hookz/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/react-hookz/eslint-config/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./base.js",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-mdx": "^2.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-mdx": "^2.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "prettier": "^2.8.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@react-hookz/eslint-formatter-gha": "^1.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.3",
    "commitizen": "^4.3.0",
    "commitlint": "^17.6.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "semantic-release": "^21.0.5",
    "yarn": "^1.22.19"
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "lint": "eslint --ext .js,.md .",
    "lint:fix": "yarn lint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.js": "yarn lint:fix"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
