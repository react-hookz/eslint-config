{
	"name": "@react-hookz/eslint-config",
	"version": "2.0.4",
	"description": "eslint configuration files used in @react-hookz projects",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/react-hookz/eslint-config.git"
	},
	"bugs": {
		"url": "https://github.com/react-hookz/eslint-config/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./base.cjs",
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-config-xo-typescript": "^0.57.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.28.0",
		"eslint-plugin-jest": "^27.2.3",
		"eslint-plugin-mdx": "^2.1.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.33.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"prettier": "^3.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.7",
		"@commitlint/config-conventional": "^17.6.7",
		"@commitlint/cz-commitlint": "^17.7.0",
		"@react-hookz/eslint-formatter-gha": "^1.0.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.0.4",
		"commitizen": "^4.3.0",
		"commitlint": "^17.7.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"semantic-release": "^21.0.7",
		"yarn": "^2.4.3"
	},
	"scripts": {
		"prepare": "husky install",
		"commit": "git-cz",
		"lint": "eslint --ext .cjs,.js,.md",
		"lint:fix": "yarn lint --fix"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"lint-staged": {
		"*.c?js": "yarn lint:fix"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			"@semantic-release/github"
		]
	}
}
