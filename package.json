{
	"name": "@react-hookz/eslint-config",
	"version": "2.1.2",
	"description": "eslint configuration files used in @react-hookz projects",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/react-hookz/eslint-config.git"
	},
	"bugs": {
		"url": "https://github.com/react-hookz/eslint-config/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./base.cjs",
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "6.7.0",
		"@typescript-eslint/parser": "6.7.0",
		"eslint": "8.49.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-config-xo-typescript": "1.0.1",
		"eslint-import-resolver-typescript": "3.6.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "2.28.1",
		"eslint-plugin-jest": "27.2.3",
		"eslint-plugin-mdx": "2.2.0",
		"eslint-plugin-n": "^16.1.0",
		"eslint-plugin-no-use-extend-native": "^0.5.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-unicorn": "^48.0.1",
		"prettier": "3.0.3"
	},
	"devDependencies": {
		"@commitlint/cli": "17.7.1",
		"@commitlint/config-conventional": "17.7.0",
		"@commitlint/cz-commitlint": "17.7.1",
		"@react-hookz/eslint-formatter-gha": "^1.0.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "9.0.5",
		"commitizen": "^4.3.0",
		"commitlint": "17.7.1",
		"husky": "^8.0.3",
		"lint-staged": "14.0.1",
		"semantic-release": "^21.1.1",
		"yarn": "^1.22.19"
	},
	"scripts": {
		"prepare": "husky install",
		"commit": "git-cz",
		"lint": "eslint",
		"lint:fix": "yarn lint --fix"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"lint-staged": {
		"*.c?js": "yarn lint:fix"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			"@semantic-release/github"
		]
	}
}
